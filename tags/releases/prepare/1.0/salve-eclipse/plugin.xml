<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="salve.eclipse.Builder"
         name="Salve Instrumenting Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="salve.eclipse.builder.SalveBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="salve.eclipse.nature"
         name="Salve Project nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="salve.eclipse.SalveNature">
         </run>
      </runtime>
      <builder
            id="salve.eclipse.Builder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">

     <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="salve.eclipse.contribution1">
         <visibility>
             <not>
                 <objectState
                       name="nature"
                       value="salve.eclipse.nature">
                 </objectState>
             </not>
         </visibility>
          <action
               label="Add Salve Nature"
               class="salve.eclipse.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="salve.eclipse.addRemoveNatureAction">
         </action>
      </objectContribution>

     <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="salve.eclipse.contribution1">
         <visibility>
                 <objectState
                       name="nature"
                       value="salve.eclipse.nature">
                 </objectState>
         </visibility>
          <action
               label="Remove Salve Nature"
               class="salve.eclipse.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="salve.eclipse.addRemoveNatureAction">
         </action>
      </objectContribution>

   </extension>
   <extension
         id="salve.eclipse.marker.error.instrument"
         name="Salve Instrumentation Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="false">
      </persistent>
   </extension>

</plugin>
